{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/collab-hub-backend/src",
  "compilerOptions": {
    "watchAssets": true,
    "deleteOutDir": true,
    "plugins": ["@nestjs/swagger/plugin"],
    "assets": [
      {
        "include": "../../../libs/mailer/src/templates/*.hbs",
        "outDir": "dist/apps/notification/"
      }
    ],
    "webpack": true,
    "tsConfigPath": "apps/collab-hub-backend/tsconfig.app.json"
  },
  "monorepo": true,
  "projects": {
    "collab-hub-backend": {
      "type": "application",
      "root": "apps/collab-hub-backend",
      "entryFile": "main",
      "sourceRoot": "apps/collab-hub-backend/src",
      "compilerOptions": {
        "tsConfigPath": "apps/collab-hub-backend/tsconfig.app.json"
      }
    },
    "notification": {
      "type": "application",
      "root": "apps/notification",
      "entryFile": "main",
      "sourceRoot": "apps/notification/src",
      "compilerOptions": {
        "tsConfigPath": "apps/notification/tsconfig.app.json"
      }
    },
    "drizzle": {
      "type": "library",
      "root": "libs/drizzle",
      "entryFile": "index",
      "sourceRoot": "libs/drizzle/src",
      "compilerOptions": { "tsConfigPath": "libs/drizzle/tsconfig.lib.json" }
    },
    "mailer": {
      "type": "library",
      "root": "libs/mailer",
      "entryFile": "index",
      "sourceRoot": "libs/mailer/src",
      "compilerOptions": { "tsConfigPath": "libs/mailer/tsconfig.lib.json" }
    },
    "redis": {
      "type": "library",
      "root": "libs/redis",
      "entryFile": "index",
      "sourceRoot": "libs/redis/src",
      "compilerOptions": { "tsConfigPath": "libs/redis/tsconfig.lib.json" }
    }
  }
}
